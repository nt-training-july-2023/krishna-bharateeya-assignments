package com.krishna.emp.repository;

import java.util.ArrayList;
import java.util.List;

import org.springframework.stereotype.Repository;

import com.krishna.emp.model.Employee;

@Repository
public class EmployeeRepository {
	
	private List<Employee> employees=new ArrayList<>();
	
	private Long nextId=101L;
	
	
	
	public List<Employee> getAllEmployee(){
		return employees;
	}
	
	public Employee getEmployeeById(Long id) {
		
		for(Employee employee:employees) {
			if(employee.getId().equals(id)) {
				return employee;
			}
		}
		return null;
	}
	
	public Employee addEmployee(Employee employee) {
		
		employee.setId(nextId++);
		employees.add(employee);
		return employee;
	}
	
	public Employee updateEmployee(Employee updateEmployee) {
		
		Employee existingEmployee= getEmployeeById(updateEmployee.getId());
		if(existingEmployee!=null) {
			
			existingEmployee.setName(updateEmployee.getName());
			existingEmployee.setAge(updateEmployee.getAge());
			existingEmployee.setCity(updateEmployee.getCity());
			existingEmployee.setDesignation(updateEmployee.getDesignation());
		}
		return existingEmployee;
	}
	
	public void deleteById(Long id) {
		
		for(Employee employee: employees) {
			if(employee.getId().equals(id)) {
				employees.remove(employee);
				break;
			}
		}
	}

}
